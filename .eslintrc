{
  "extends": "airbnb/legacy",
  "env": {
    "browser": true,
    "node": true,
    "meteor": true,
    "mocha": true
  },
  "globals": {
    "DirectStreamAccess": true
  },
  "rules": {
    "indent": [ 2, 4 ],
    "no-multi-spaces": [ 2, { "exceptions": { "VariableDeclarator": true } } ],
    "comma-dangle": [0]
  }
}